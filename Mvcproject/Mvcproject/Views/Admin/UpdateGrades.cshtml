@model Mvcproject.ModelView.CurriculumViewModel
@using Mvcproject.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateGrades</title>
</head>
<body>
        <div>
         
            <div>
                <span style="color:blue">Grades </span>
                <br />
                <table>
                    <tr>
                        <td>Course id</td>
                        <td>Course Name</td>
                      

                    </tr>
                    @foreach (Courses obj in Model.courses)
                    {
                <tr>
                    <td>@obj.course_id</td>
                    <td>@obj.course_name</td>                   
                    <td>@Html.ActionLink("Student list", "edit_grade1", obj, new { @class = "classname" })</td>
                </tr>
                    }
                </table>
            </div>
            </div>
</body>
</html>
