@model Mvcproject.ModelView.CurriculumViewModel
@using Mvcproject.Models
@{
    Layout = null;
    Courses temp = new Courses();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View_Schedule</title>
</head>
<body>
    <div>
        <span style="color:blue">Courses schedules</span>
        <br />
        <table>

            <tr>
                <th></th>
                <th>Sunday</th>
                <th>Monday</th>
                <th>Tuesday</th>
                <th>Wednesday</th>

            </tr>
            <tr>
            </tr>
            
            @foreach (Curriculum obj in Model.curriculums)
            {
                foreach (Courses c in Model.courses)
                {
                    if (c.course_id == obj.course_id) { temp = c; }
                }
          
        <tr>
            <td>10:00</td>
            @if (obj.day.Equals("a"))
            {
                <td>
                    @temp.course_name
                </td>
            }
            else
            {
                <td></td>
            }
            @if (obj.day.Equals("b"))
            {
                <td>
                    @temp.course_name
                </td>
            }
            else
            {
                <td></td>
            }
            @if (obj.day.Equals("c"))
            {
                <td>
                    @Model.course.course_name
                </td>
            }
            else
            {
                <td></td>
            }
            @if (obj.day.Equals("d"))
            {
                <td>
                    @temp.course_name
                </td>
            }
            else
            {
                <td></td>
            }

        </tr>
            }
        </table>
    </div>
</body>
</html>
