@model  Mvcproject.ModelView.StudiesViewModel

@{
    Layout = null;
}
@using Mvcproject.Models;

<div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <h1><b>Add new student to the system</b></h1>
    <div>
        @using (Html.BeginForm("Assign", "Login", FormMethod.Post))
        {

            <i>Course Name: </i> @Html.TextBoxFor(m => m.course.course_name) @Html.ValidationMessageFor(x => x.course.course_name)
            <br />
            <i>Student First Name: </i> @Html.TextBoxFor(m => m.student.firstname) @Html.ValidationMessageFor(x => x.student.firstname)
            <br />
            <i>Student Last Name: </i> @Html.TextBoxFor(m => m.student.lastname) @Html.ValidationMessageFor(x => x.student.lastname)
            <br />
           
            <input id="Submit3" type="submit" value="Assign Student" />
            <br />
            @Html.ValidationSummary()
        }
        <br />
    </div>
</div>